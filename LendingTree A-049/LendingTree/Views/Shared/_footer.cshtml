    <style>
        .header {
            margin: 20px;
        }


        p {
            font-size: 1.2rem;
            line-height: 1.6;
            font-weight: 500;
            color: #606060;
        }

        h3 {
            color: #43c8c0;
        }

        .extradiv h2 {
            font-size: 2rem;
            margin: 20px 0 15px 0;
            font-weight: bold;
            line-height: 1.1;
            word-spacing: 4px;
        }

        .header-extradiv {
            width: 100%;
            height: auto;
            margin: 100px 0;
            text-align: center;
        }

        .extradiv {
            background: #fff;
            border: medium none;
            padding: 50px !important;
            border-radius: 10px;
            transition: 0.3s;
        }

            .extradiv:hover {
                box-shadow: 0 0 20px 0 rgba(0,0,0,0.3);
                transform: translateY(-30px);
            }
    </style>
