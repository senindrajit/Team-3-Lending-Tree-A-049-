<html>
<head>
    <style>
        body {
            background: url('/Images/white3.jpg');
            background-repeat: no-repeat;
            background-size: 1920px 1080px;
            color: ghostwhite;
        }


        .form-horizontal {
            display: inline-block;
            margin-left: 15%;
            margin-right: 15%;
            width: 70%;
        }

        .btn {
            border: 1px solid #3498db;
            background: none;
            padding: 10px 20px;
            font-size: 20px;
            font-family: "montserrat";
            cursor: pointer;
            margin: 10px;
            transition: 0.8s;
            position: relative;
            overflow: hidden;
            color: #3498db;
        }


            .btn:hover {
                color: #184b4a;
            }


            .btn::before {
                content: "";
                position: absolute;
                left: 0;
                width: 100%;
                height: 0%;
                background: #3498db;
                z-index: -1;
                transition: 0.8s;
                top: 0;
                border-radius: 0 0 50% 50%;
            }







            .btn:hover::before {
                height: 100%;
            }


        div {
            color: black;
        }
    </style>

    @Html.Partial("_styling");
</head>


<body>


    @{ ViewBag.Title = "Account"; }



    <h3 style="text-align:center; color: cornflowerblue">User Account</h3>

    <hr>
    @if (ViewBag.Gender == "Male")
    {
<h4 style="color:black"> Welcome Mr. @ViewBag.Message</h4> }
else if (ViewBag.Gender == "Female")
{
<h4 style="color:black">Welcome Ms/Mrs. @ViewBag.Message </h4> }
else
{
<h4 style="color:black">Welcome @ViewBag.Message </h4>}

    <hr>
    @Html.ActionLink("Apply for a new loan", "ApplyLoan", new { userId = ViewBag.UserId })
    <hr>
    @Html.ActionLink("Check Loan Status", "CheckStatus", new { userId = ViewBag.UserId })
    <hr>
    @Html.ActionLink("Help", "ApplyTicket", new { userId = ViewBag.UserId })
    <hr>
    @Html.ActionLink("Check Ticket Status", "CheckTicket", new { userId = ViewBag.UserId })

    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Registration", "Create", "User", new { Style = "color:Green" }, null)</li>
                @*<li>@Html.ActionLink("ViewLoans", "Index", "Loans")</li>*@
