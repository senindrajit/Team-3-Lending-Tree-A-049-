@{
    Layout = null;
    ViewBag.Title = "Home Page";
}

<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Lending Tree</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>


<link rel="stylesheet" href="~/css/style.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<style>
    .header {
        margin: 20px;
    }


    p {
        font-size: 1.2rem;
        line-height: 1.6;
        font-weight: 500;
        color: #606060;
    }

    h3 {
        color: #43c8c0;
    }

    .extradiv h2 {
        font-size: 2rem;
        margin: 20px 0 15px 0;
        font-weight: bold;
        line-height: 1.1;
        word-spacing: 4px;
    }

    .header-extradiv {
        width: 100%;
        height: auto;
        margin: 100px 0;
        text-align: center;
    }

    .extradiv {
        background: #fff;
        border: medium none;
        padding: 50px !important;
        border-radius: 10px;
        transition: 0.3s;
    }

        .extradiv:hover {
            box-shadow: 0 0 20px 0 rgba(0,0,0,0.3);
            transform: translateY(-30px);
        }
</style>
</head>
<body>
    <div class="header">
        <nav class="navbar navbar-expand-md navbar-dark">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">Lending Tree</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav">
                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Home</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Register as</a>
                        <div class="dropdown-menu">
                            <a href="@Url.Action("Create", "User")" class="dropdown-item">New User</a>
                            <a href="@Url.Action("Create", "Agent")" class="dropdown-item">New Agent</a>

                        </div>
                    </div>
                </div>
                <form class="form-inline">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-secondary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>

                <div class="nav-item dropdown">
                    <a href="@Url.Action("", "")" class="nav-link dropdown-toggle" data-toggle="dropdown"><i class="fa fa-sign-in fa-2x" aria-hidden="true"></i>Login as</a>
                    <div class="dropdown-menu">
                        <a href="@Url.Action("Login", "User")" class="dropdown-item">User</a>
                        <a href="@Url.Action("Login", "Agent")" class="dropdown-item">Agent</a>
                        <a href="@Url.Action("Login", "Admin")" class="dropdown-item">Admin</a>
                    </div>
                </div>
            </div>

        </nav>


        <div class="mid">
            <video autoplay muted loop>
                <source class="embed-responsive" src="~/video/startupvideo2.mp4" type="video/mp4">
            </video>
            <div class="innertext text-center">
                <h1 class="text-light display-4 font-weight-bold">Lending Tree Application</h1>
                <p class="text-light mx-auto">Easy Business, Vehicle and Personal loans <br>Now at Your finger tips</p>
            </div>
        </div>
    </div>


    <section class="header-extra div">
        <div class="container">
            <div class="row">
                <div class="extradiv col-lg-4 col-md-4 col-12">
                    <i class="fad fa-sack-dollar fa-5x"></i>
                    <br>
                    <hr>
                    <h3>INSTANT LOAN</h3>
                    <p>We provide instant loans which are sactioned within 3 business days!</p>
                </div>
                <div class="extradiv col-lg-4 col-md-4 col-12">
                    <i class="fad fa-analytics fa-5x"></i>
                    <br>
                    <hr>
                    <h3>MINIMAL INTEREST RATE</h3>
                    <p>We Provide loans in a very low interest rate!</p>
                </div>
                <div class="extradiv col-lg-4 col-md-4 col-12">
                    <i class="fad fa-phone-square fa-5x"></i>
                    <br>
                    <hr>
                    <h3>24*7 SERVICE</h3>
                    <p>Our services are open 24*7.</p>
                </div>
            </div>
        </div>
    </section>
    </div>

    <div class="about py-5">
        <div class=" row align-items-center container my-5 mx-auto">
            <div class="text col-lg-6 col-md-6 col-6 w-50 pt-5 pb-5">
                <h6>Easy Loans Available</h6>
                <h2>Get loans with minimum Interest rate</h2>
                <p>We provide business loan, home loan, vehicle loan etc in a minimum interest rate. We are partnered with top global banks.</p>
            </div>
            <div class=" img col-lg-6 col-md-6 col-12 w-50 pt-5 pb-5">
                <img class="image-fluid" src="
                         ~/Images/loan.png">
            </div>

        </div>
    </div>

    <section class="">
        <!-- Footer -->
        <footer class="text-center text-white" style="background-color: #0a4275;">
            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: CTA -->
                <section class="">
                    <p class="d-flex justify-content-center align-items-center">
                        <span class="me-3">Register for free</span>
                        <button type="button" class="btn btn-outline-light btn-rounded">
                            <a href=" @Url.Action("Create","user")"> Sign up!</a>
                        </button>
                    </p>
                </section>
                <!-- Section: CTA -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2021 Copyright:
                <a href="@Url.Action("Index","Home")">Lending Tree Application</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->
    </section>



</body>
</html>
